<body id="bg">
<h1 class="centered text">Welcome to your BlackJack table</h1>
<div class="container" id="log">
    <div id="login">
        <h3>Login</h3>
        <input type="text" name="id" id="logId"><br>
        <input type="password" name="password" id="logPassword"><br>
        <button id="loginSubmit" onclick="login()">submit</button>
        <div id="errorLogin" class="error">This account does not exist</div>
    </div>
    <hr>
    <div id="nAccount">
        <h3>Create Account</h3>
        <input type="text" name="id" id="newId"><br>
        <input type="password" name="password" id="newPassword"><br>
        <button id="nAccountSubmit" onclick="createAccount()">submit</button>
        <div id="errorCreateAccount" class="error">This username is not available</div>
    </div>
</div>
<div class="container" id="tables">
    <div id="table">
        <div class="info">
            <p>Table nÂ°{{ idTable }}</p>
            <p>num player : {{ numPlayers }}</p>
            <p>state : {{ state }}</p>
        </div>
        <button id="joinTable" onclick="redirect('/blackJack/table/'+ {{ idTable }})">Join table</button>
    </div>
</div>

